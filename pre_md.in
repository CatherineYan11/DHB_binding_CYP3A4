3ns MD
&cntrl
!I/O set up
imin=0,                                      !run md simulation without any minimization
ntx=5, irest=1,                              !read coordinates, velocities from npt restart file
ntpr=1000, ntwx=1000,                        !output energy & trajectory coordinates every 1000 steps
!MD set up 
nstlim=1500000, dt=0.002,                    !0.002(ps/step)*1500000(step)-->3(ns)
!Thermostat set up
ntt=3, gamma_ln=1.0,                         !use Langevin Dynamics with collision frequency 1(ps^-1)
temp0=300, tempi=300,                        !keep system temperature at 300K
tautp=2,                                     !heat bath coupling for every 2ps
!Barostat set up
ntp=1, barostat=1,                           !use isotropic position scaling with Berendsen barostat
pres0=1.013,                                 !target pressure in bar(1bar=0.987atm)
taup=1.0,                                    !pressure relaxation time in ps
!SHAKE set up
ntc=2, ntf=2,                                !SHAKE use to restraint covalent bonds involving H atoms
!non-bond interaction set up
cut=10.0,                                    !non-bond interacton cut off
/
